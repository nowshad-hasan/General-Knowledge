<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.summithaque.generalknowledge.BanSecond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/img2"
        android:id="@+id/relativeLayout3"></RelativeLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/banSecBack"
        android:id="@+id/banSecBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fbd8d8"
        android:textColor="#123456"
        android:textStyle="normal|italic"
        android:textSize="18sp"
        android:onClick="backMethod" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/banSecNext"
        android:id="@+id/banSecNext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/relativeLayout3"
        android:background="#fbd8d8"
        android:textColor="#123456"
        android:textStyle="normal|italic"
        android:textSize="18sp"
        android:onClick="nextMethod" />


</RelativeLayout>
