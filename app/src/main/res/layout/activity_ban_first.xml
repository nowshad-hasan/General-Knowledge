<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.summithaque.generalknowledge.BanFirst">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/img1"></RelativeLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/banFirstBack"
        android:id="@+id/banFirstBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#123456"
        android:background="#d6e3ea"
        android:onClick="backMethod" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/banFirstNext"
        android:id="@+id/banFirstNext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#123456"
        android:background="#d6e3ea"
        android:onClick="nextMethod" />


</RelativeLayout>
